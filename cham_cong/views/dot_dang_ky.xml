<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_dot_dang_ky_form" model="ir.ui.view">
        <field name="name">dot.dang.ky.form</field>
        <field name="model">dot_dang_ky</field>
        <field name="arch" type="xml">
            <form string="Đợt đăng ký">
                <sheet>
                    <group>
                        <group>
                            <field name="ma_dot"/>
                            <field name="ten_dot" readonly="1"/>
                        </group>
                        <group>
                            <field name="nam_dang_ky"/>
                            <field name="thang_dang_ky"/>
                            <field name="han_dang_ky"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="ngay_bat_dau" readonly="1"/>
                            <field name="ngay_ket_thuc" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="nhan_vien_ids" widget="many2many_tags"/>
                    </group>
                    <group>
                        <group>
                            <field name="trang_thai_dang_ky" readonly="1" widget="badge"/>
                        </group>
                        <group>
                            <field name="trang_thai_ap_dung" readonly="1" widget="badge"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_dot_dang_ky_tree" model="ir.ui.view">
        <field name="name">dot.dang.ky.tree</field>
        <field name="model">dot_dang_ky</field>
        <field name="arch" type="xml">
            <tree string="Đợt đăng ký">
                <field name="ma_dot"/>
                <field name="ten_dot"/>
                <field name="thang_dang_ky"/>
                <field name="nam_dang_ky"/>
                <field name="han_dang_ky"/>
                <field name="trang_thai_dang_ky" widget="badge"/>
                <field name="trang_thai_ap_dung" widget="badge"/>
            </tree>
        </field>
    </record>
</odoo>
