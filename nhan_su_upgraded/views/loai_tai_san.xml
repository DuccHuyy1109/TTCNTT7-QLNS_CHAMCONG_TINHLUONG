<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_loai_tai_san_tree" model="ir.ui.view">
        <field name="name">loai.tai.san.tree</field>
        <field name="model">loai_tai_san</field>
        <field name="arch" type="xml">
            <tree string="Loại tài sản">
                <field name="ma_loai"/>
                <field name="ten_loai"/>
                <field name="so_luong_tai_san"/>
                <field name="mo_ta"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_loai_tai_san_form" model="ir.ui.view">
        <field name="name">loai.tai.san.form</field>
        <field name="model">loai_tai_san</field>
        <field name="arch" type="xml">
            <form string="Loại tài sản">
                <sheet>
                    <group>
                        <group>
                            <field name="ma_loai"/>
                            <field name="ten_loai"/>
                        </group>
                        <group>
                            <field name="so_luong_tai_san" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="mo_ta" placeholder="Mô tả về loại tài sản..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_loai_tai_san" model="ir.actions.act_window">
        <field name="name">Loại tài sản</field>
        <field name="res_model">loai_tai_san</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
